<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".type.TypeFragment">


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <RadioButton
            android:id="@+id/rdoPick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pick"
            android:gravity="top"
            android:paddingTop="8dp"
            android:text="Want Pick Up" />

        <RadioButton
            android:id="@+id/rdoDrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deliver At Lab "
            android:gravity="bottom"
            android:paddingBottom="8dp"
            android:background="@drawable/bg_drop"
            />
    </RadioGroup>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_32dp"
        >

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:layout_above="@+id/txtAStatus"
        android:text="Next"
        android:textColor="@color/white"/>

        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progressbar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtAStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        />
    </FrameLayout>

</RelativeLayout>